    <servlet>
        <servlet-name>DishList</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.DishList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DishList</servlet-name>
        <url-pattern>/dish-list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDish</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.AddDish</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDish</servlet-name>
        <url-pattern>/admin/add-dish</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditDish</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.EditDish</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditDish</servlet-name>
        <url-pattern>/admin/edit-dish/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDish</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.DeleteDish</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDish</servlet-name>
        <url-pattern>/admin/delete-dish/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MealList</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.MealList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MealList</servlet-name>
        <url-pattern>/meal-list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddMeal</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.AddMeal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMeal</servlet-name>
        <url-pattern>/admin/add-meal</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditMeal</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.EditMeal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditMeal</servlet-name>
        <url-pattern>/admin/edit-meal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteMeal</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.DeleteMeal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteMeal</servlet-name>
        <url-pattern>/admin/delete-meal/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserList</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.UserList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserList</servlet-name>
        <url-pattern>/user-list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.EditUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/edit-user/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.DeleteUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/delete-user/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>net.therap.mealplanner.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginRequiredFilter</filter-name> <!-- mandatory -->
        <filter-class>net.therap.mealplanner.filters.LoginRequiredFilter</filter-class> <!-- mandatory -->
    </filter>

    <filter-mapping>
        <filter-name>LoginRequiredFilter</filter-name> <!-- mandatory -->
        <url-pattern>/*</url-pattern> <!-- either url-pattern or servlet-name is mandatory -->
    </filter-mapping>

    <filter>
        <filter-name>AdminRequiredFilter</filter-name> <!-- mandatory -->
        <filter-class>net.therap.mealplanner.filters.AdminRequiredFilter</filter-class> <!-- mandatory -->
    </filter>

    <filter-mapping>
        <filter-name>AdminRequiredFilter</filter-name> <!-- mandatory -->
        <url-pattern>/admin/*</url-pattern> <!-- either url-pattern or servlet-name is mandatory -->
    </filter-mapping>
</web-app>